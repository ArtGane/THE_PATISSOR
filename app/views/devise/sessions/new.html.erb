<div class='bold-line'></div>
<div class='container'>
  <div class='window'>
    <div class='overlay'></div>
    <div class='content'>
      <div class='welcome'>Bonjour !</div>
      <div class='subtitle'>Ravi de te revoir</div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs input-fields">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "input-line full-width" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "input-line full-width" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <div><button class='ghost-round full-width'>Se connecter</button></div>
